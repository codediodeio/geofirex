{
    "name": "geofirex-af",
    "version": "0.1.1",
    "description": "Realtime Firestore GeoQueries with RxJS",
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/codediodeio/geofirex.git"
    },
    "scripts": {
        "build-ts": "tsc",
        "build-prehook": "npm run build-ts && npm run lint",
        "build": "npm run build-prehook && rollup -c",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "test": "jest --coverage --forceExit --runInBand --detectOpenHandles",
        "test:watch": "jest --watchAll",
        "dev": "npm run build-prehook && rollup -c -w",
        "publish": ""
    },
    "keywords": [
        "rxjs",
        "firebase",
        "geofire",
        "geohash",
        "map",
        "firestore"
    ],
    "author": {
        "name": "Jeff Delaney",
        "email": "hello@fireship.io",
        "url": "https://fireship.io"
    },
    "contributors": [
        {
            "name": "Andre Fortin",
            "email": "andre@fortinmedia.ca",
            "url": "https://fortinmedia.ca"
        }
    ],
    "license": "ISC",
    "peerDependencies": {
        "firebase": "^9.x.x",
        "rxjs": "^7.x.x"
    },
    "dependencies": {
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@firebase/firestore-types": "^0.4.3",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.1.2",
        "@turf/bearing": "^6.5.0",
        "@turf/distance": "^6.5.0",
        "@turf/turf": "^6.5.0",
        "@types/chance": "^1.1.3",
        "@types/eslint": "7.2.6",
        "@types/faker": "^5.5.9",
        "@types/geojson": "^7946.0.8",
        "@types/jest": "^27.4.0",
        "@types/lodash": "^4.14.178",
        "@types/ngeohash": "^0.6.4",
        "@typescript-eslint/eslint-plugin": "4.14.2",
        "@typescript-eslint/parser": "4.14.2",
        "eslint": "7.19.0",
        "eslint-plugin-promise": "^6.0.0",
        "jest": "^27.4.5",
        "rollup": "^2.62.0",
        "rollup-plugin-analyzer": "^4.0.0",
        "rollup-plugin-bundle-size": "^1.0.3",
        "rollup-plugin-sizes": "^1.0.4",
        "rollup-plugin-typescript2": "^0.31.1",
        "ts-jest": "^27.1.2",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "typescript": "^4.x.x"
    },
    "engines": {
        "node": ">= 14.0.0",
        "npm": ">= 8.0.0"
    }
